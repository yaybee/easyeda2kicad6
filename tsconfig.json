{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "newLine": "LF",
    "noEmitOnError": true,
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2015"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"]
}
